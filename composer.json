{
  "name": "altapay/api",
  "description": "Altapay API",
  "keywords": [
    "payment", "altapay"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Aarhof",
      "email": "maa@scandesigns.dk"
    }
  ],
  "require": {
    "php": ">=5.5|7.0",
    "guzzlehttp/guzzle": "^6.0",
    "symfony/options-resolver": "^2.6|^3.0",
    "symfony/event-dispatcher": "^2.1|^3.0"
  },
  "suggest": {
    "inacho/php-credit-card-validator": "To validate credit cards"
  },
  "autoload": {
    "psr-4": {
      "Altapay\\Api\\" : "src"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^4.7",
    "phpmd/phpmd": "^2.2",
    "sebastian/phpcpd": "^2.0",
    "phploc/phploc": "^2.1",
    "phing/phing": "^2.11",
    "satooshi/php-coveralls": "^1.0",
    "squizlabs/php_codesniffer": "^2.3",
    "fabpot/php-cs-fixer": "^1.10",
    "apigen/apigen": "dev-master"
  },
  "autoload-dev": {
    "psr-4": {
      "Altapay\\ApiTest\\" : "tests"
    }
  },
  "config": {
    "bin-dir": "bin"
  }
}
